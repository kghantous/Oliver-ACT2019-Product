@page
@model Oliver_ACT2019_Product.Web.Pages.Parks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All The Parks!</h1>

<p>
    @*<a asp-page="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Add Park</a>*@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Park
            </th>
            <th>
                State
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Park) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.StateLookup[item.State_Id])
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
